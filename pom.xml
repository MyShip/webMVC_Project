<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>My Notes App</display-name>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>LoginPage.html</welcome-file>
    </welcome-file-list>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- User Register Servlet -->
    <servlet>
        <servlet-name>UserRegisterServlet</servlet-name>
        <servlet-class>UserRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Memo Register Servlet -->
    <servlet>
        <servlet-name>MemoRegisterServlet</servlet-name>
        <servlet-class>MemoRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MemoRegisterServlet</servlet-name>
        <url-pattern>/memo-register</url-pattern>
    </servlet-mapping>

    <!-- Memo Delete Servlet -->
    <servlet>
        <servlet-name>MemoDeleteServlet</servlet-name>
        <servlet-class>MemoDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MemoDeleteServlet</servlet-name>
        <url-pattern>/memo-delete</url-pattern>
    </servlet-mapping>

    <!-- Memo Edit Servlet -->
    <servlet>
        <servlet-name>MemoEditServlet</servlet-name>
        <servlet-class>MemoEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MemoEditServlet</servlet-name>
        <url-pattern>/memo-edit</url-pattern>
    </servlet-mapping>

    <!-- Memo Update Servlet -->
    <servlet>
        <servlet-name>MemoUpdateServlet</servlet-name>
        <servlet-class>MemoUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MemoUpdateServlet</servlet-name>
        <url-pattern>/memo-update</url-pattern>
    </servlet-mapping>

    <!-- Error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
</web-app>